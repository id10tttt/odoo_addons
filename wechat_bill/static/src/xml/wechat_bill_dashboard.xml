<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="wechat_bill.WeChatBillDashboardTemplate">
<!--        <head>-->
        <!--          <link href="/wechat_bill/static/scss/bill_dashboard.css" rel="stylesheet"/>-->
        <!--        </head>-->
        <body>
            <div class="o_content">
                <div class="row" style="padding: 10px 0 20px 0;">
                      <div class="col-sm-1">
                       开始时间：
                     </div>
                    <div class="col-sm-2">
                        <input type="text" id="date_start" name="date_start" placeholder='YYYY-MM-DD'/>
                     </div>
                    <div class="col-sm-1">
                       结束时间：
                     </div>
                    <div class="col-sm-2">
                      <input type="text" id="date_stop" name="date_stop" placeholder='YYYY-MM-DD'/>
                   </div>
                    <div class="col-sm-1">
                         <button type="button" id="datetime_apply_search"
                                 class="btn btn-primary oe_highlight">应用</button>
                     </div>
                    <div class="col-sm-5">
                         <button type="button" style="float: right" id="o_cp_fullscreen"
                                 class="btn btn-primary oe_highlight"><i class="fa fa-expand"/></button>
                     </div>
                    <script type="text/javascript">
                        $("#date_start").datepicker({
                            changeMonth: true,
                            changeYear: true,
                            dateFormat: "yy-mm-dd",
                            todayBtn: 1
                        });
                        $("#date_stop").datepicker({
                            changeMonth: true,
                            changeYear: true,
                            dateFormat: "yy-mm-dd",
                            todayBtn: 1
                        });
                    </script>
                 </div>
            </div>
            <div class="row" style="padding: 10px 0 0 0;background: #ffffff">
                <div class="col-sm-6">
                    <div id="wechat_bill_daily_bi" class="mt-2" style="width: 800px;height:500px;"/>
                </div>
                <div class="col-sm-6">
                    <div id="wechat_bill_2_person_bi" class="mt-2" style="width: 800px;height:500px;"/>
                </div>
            </div>
        </body>
    </t>
</templates>
